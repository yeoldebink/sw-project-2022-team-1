<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>
<Stage xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
  fx:controller="il.ac.haifa.hmo_system.AdminClinicViewController">
  <scene>
    <Scene>
      <AnchorPane prefHeight="423.0" prefWidth="301.0">
        <children>
          <VBox layoutX="14.0" layoutY="14.0" prefHeight="401.0" prefWidth="276.0">
            <children>
              <GridPane>
                <children>
                  <Label GridPane.rowIndex="0" text="Name: "/>
                  <Label GridPane.columnIndex="1" text="NAME"/>

                  <Label GridPane.rowIndex="1" text="Address: "/>
                  <Label GridPane.columnIndex="1" GridPane.rowIndex="1" text="ADDRESS"/>

                  <Label GridPane.rowIndex="2" text="Manager: "/>
                  <Label GridPane.columnIndex="1" GridPane.rowIndex="2" text="MANAGER"/>

                  <Label GridPane.rowIndex="3" text="Hours" underline="true"/>

                  <Label GridPane.rowIndex="4" text="Sun"/>
                  <Label GridPane.rowIndex="5" text="Mon"/>

                  <Label GridPane.rowIndex="6" text="Tue"/>
                  <Label GridPane.rowIndex="7" text="Wed"/>

                  <Label GridPane.rowIndex="8" text="Thu"/>
                  <Label GridPane.rowIndex="9" text="Fri"/>

                  <Label GridPane.rowIndex="10" text="Sat"/>
                  <TextField GridPane.columnIndex="1" GridPane.rowIndex="4"
                    fx:id="sunHoursTextField"/>

                  <TextField GridPane.columnIndex="1" GridPane.rowIndex="5"
                    fx:id="monHoursTextField"/>
                  <TextField GridPane.columnIndex="1" GridPane.rowIndex="6"
                    fx:id="tueHoursTextField"/>

                  <TextField GridPane.columnIndex="1" GridPane.rowIndex="7"
                    fx:id="wedHoursTextField"/>
                  <TextField GridPane.columnIndex="1" GridPane.rowIndex="8"
                    fx:id="thuHoursTextField"/>

                  <TextField GridPane.columnIndex="1" GridPane.rowIndex="9"
                    fx:id="friHoursTextField"/>
                  <TextField GridPane.columnIndex="1" GridPane.rowIndex="10"
                    fx:id="satHoursTextField"/>
                </children>
                <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="132.0" minWidth="10.0"
                    prefWidth="80.0"/>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="207.0" minWidth="10.0"
                    prefWidth="196.0"/>
                </columnConstraints>
                <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                  <RowConstraints/>
                  <RowConstraints/>
                  <RowConstraints/>
                  <RowConstraints/>
                  <RowConstraints/>
                </rowConstraints>
              </GridPane>
              <Label prefHeight="18.0" prefWidth="91.0" text="Clinic Info" underline="true">
                <VBox.margin>
                  <Insets top="5.0"/>
                </VBox.margin>
                <font>
                  <Font name="DejaVu Sans Bold" size="14.0"/>
                </font>
              </Label>
              <Label text="Edit Clinic">
                <font>
                  <Font name="DejaVu Sans Bold" size="22.0"/>
                </font>
              </Label>
              <VBox/>
              <VBox alignment="BASELINE_CENTER">
                <Button onAction="#saveClinicChanges" text="Save Changes">
                  <VBox.margin>
                    <Insets top="15.0"/>
                  </VBox.margin>
                </Button>
              </VBox>
            </children>
          </VBox>
        </children>
      </AnchorPane>
    </Scene>
  </scene>
</Stage>
