                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="207.0" minWidth="10.0"
                                           prefWidth="182.39996337890625"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
                <Label text="Comments"/>
                <TextArea fx:id="comments" prefHeight="98.0" prefWidth="276.0"/>
                <VBox/>
                <VBox alignment="BASELINE_CENTER" prefHeight="42.0" prefWidth="276.0">
                    <Button fx:id="create_appts" onAction="#requestCreateAppointments" text="Create Appointment(s)">
                        <VBox.margin>
                            <Insets top="15.0"/>
                        </VBox.margin>
                    </Button>
                    <Label fx:id="error_text">
                        <VBox.margin>
                            <Insets top="10.0"/>
                        </VBox.margin>
                    </Label>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
