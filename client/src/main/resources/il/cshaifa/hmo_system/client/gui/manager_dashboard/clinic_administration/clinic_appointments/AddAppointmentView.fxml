<AnchorPane prefHeight="359.0" prefWidth="301.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifa.hmo_system.client.gui.manager_dashboard.clinic_administration.clinic_appointments.add_appointment.AddAppointmentViewController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="323.0" prefWidth="276.0">
            <children>
                <Label text="Add Appointments">
                    <font>
                        <Font name="DejaVu Sans Bold" size="22.0"/>
                    </font>
                </Label>
                <Label fx:id="staff_member_name" text="">
                    <font>
                        <Font name="DejaVu Sans Bold" size="16.0"/>
                    </font>
                </Label>
                <GridPane prefWidth="276.0">
                    <children>
                        <Label text="Type" GridPane.rowIndex="0"/>
                        <Label text="Start Date" GridPane.rowIndex="1"/>
                        <Label text="# Appointments" GridPane.rowIndex="3"/>

                        <Label underline="true" GridPane.rowIndex="3"/>
                        <DatePicker fx:id="start_date" prefHeight="26.0" prefWidth="247.0" promptText="START DATETIME"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="appt_type" prefHeight="26.0" prefWidth="188.0" GridPane.columnIndex="1"/>
                        <Label text="Start Time" GridPane.rowIndex="2"/>
                        <TextField fx:id="start_time" promptText="HH:MM" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"/>
                        <TextField fx:id="num_appts" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </children>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="132.0" minWidth="10.0"
