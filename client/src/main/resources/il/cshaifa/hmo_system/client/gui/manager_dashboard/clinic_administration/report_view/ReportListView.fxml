  <VBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
    AnchorPane.rightAnchor="0">
    <SplitPane VBox.vgrow="ALWAYS" fx:id="splitPane">
      <AnchorPane SplitPane.resizableWithParent="NO" maxWidth="350">
        <ListView fx:id="clinicList" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0"/>
      </AnchorPane>
      <AnchorPane>
        <TableView fx:id="reportsTable" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0">
          <columnResizePolicy>
            <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY"/>
          </columnResizePolicy>
          <columns>
            <TableColumn fx:id="clinicNameTableColumn" text="Clinic" prefWidth="350"/>
            <TableColumn fx:id="reportDateTableColumn" text="Report Date" prefWidth="220"/>
          </columns>
        </TableView>
      </AnchorPane>
      <AnchorPane fx:id="reportViewAnchorPane" />
    </SplitPane>

    <HBox>
      <VBox.margin>
        <Insets top="10"/>
      </VBox.margin>
      <HBox>
        <DatePicker fx:id="startDatePicker" promptText="Start date"/>
        <DatePicker fx:id="endDatePicker" promptText="End date">
          <HBox.margin>
            <Insets left="10"/>
          </HBox.margin>
        </DatePicker>
        <ComboBox fx:id="reportTypeComboBox">
          <HBox.margin>
            <Insets left="10"/>
          </HBox.margin>
        </ComboBox>
      </HBox>
      <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
        <Button text="Get reports" onAction="#requestReports">
          <HBox.margin>
            <Insets left="10"/>
          </HBox.margin>
        </Button>
      </HBox>
    </HBox>
  </VBox>

</AnchorPane>
