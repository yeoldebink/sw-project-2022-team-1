<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="900.0" stylesheets="@../hmo_lite.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifa.hmo_system.on_site_client.gui.staff_appointment_list.StaffAppointmentListViewController">
    <VBox prefWidth="900.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <Label styleClass="h1-label" text="Upcoming Appointments">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin></Label>
        <Label fx:id="staff_member_role_name" styleClass="h2-label">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin></Label>
        <Label fx:id="current_date">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin></Label>
        <TableView fx:id="appt_table" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="place_in_line" prefWidth="75.0" text="Place in line" />
                <TableColumn fx:id="appt_time" prefWidth="75.0" text="Time" />
                <TableColumn fx:id="appt_type_name" prefWidth="75.0" text="Treatment Type" />
