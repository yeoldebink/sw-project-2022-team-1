                <TableColumn fx:id="patient_home_clinic" prefWidth="75.0" text="Patient Home Clinic" />

            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
